{
  "name": "webspeech-synth-react",
  "version": "0.0.3",
  "description": "Web speech API wrapper for react",
  "keywords": [
    "react",
    "speak",
    "speech synthesis",
    "speechsynthesis",
    "text to speech",
    "tts",
    "react-tts"
  ],
  "public": "true",
  "author": "0surface",
  "license": "MIT",
  "source": "src/index.js",
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "parcel build",
    "prettier": "prettier src --write",
    "prepack": "npm rub clean && npm run prettier",
    "clean": "rm -rf ./dist",
    "cleanexample": "rm -rf ./dist",
    "example": "npx parcel example/index.html",
    "publish": "npm clean && npm run prettier && npm publish --access public"
  },
  "peerDependencies": {
    "react": ">= 18.2.0"
  },
  "dependencies": {
    "short-uuid": "^4.2.0"
  },
  "devDependencies": {
    "parcel": "^2.7.0",
    "process": "^0.11.10",
    "react-dom": "^18.2.0"
  }
}
